#Write a function that counts characters in a string.

def count_characters(input_string):
    count = 0  # Initialize character count
    for char in input_string:  # Iterate over each character in the string
        count += 1  # Increment the count for each character
    return count  # Return the total character count
# Example usage
user_input = input("Enter a string: ")
character_count = count_characters(user_input)
print(f"The number of characters in the string is: {character_count}")  
