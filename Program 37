#while Loop (10 Programs)
#_1. Print numbers from 1 to 10.
#_2. Print numbers from 10 to 1.
#_3. Sum of digits of a number. 
#_4. Reverse a number.
#_5. Count digits in a number.
#_6. Print multiplication table.
#_7. Find factorial of a number.
#_8. Check palindrome number.
#_9. Print even numbers up to N.
#_10. Keep taking input until user enters 0.


i = 1
print("Numbers from 1 to 10:")
while i <= 10:
    print(i)
    i += 1
i = 10
print("Numbers from 10 to 1:")
while i >= 1:
    print(i)
    i -= 1

num = int(input("Enter a number to sum its digits: "))
sum_of_digits = 0
temp = num
while temp > 0:
    digit = temp % 10
    sum_of_digits += digit
    temp //= 10
print(f"Sum of digits of {num} is: {sum_of_digits}")

num = int(input("Enter a number to reverse: "))
reversed_num = 0
temp = num
while temp > 0:
    digit = temp % 10
    reversed_num = reversed_num * 10 + digit
    temp //= 10
print(f"Reversed number of {num} is: {reversed_num}")

num = int(input("Enter a number to count its digits: "))
count = 0
temp = num
while temp > 0:
    count += 1
    temp //= 10
print(f"Number of digits in {num} is: {count}")

num = int(input("Enter a number to print its multiplication table: "))
print(f"Multiplication table of {num}:")
i = 1
while i <= 10:
    print(f"{num} x {i} = {num * i}")
    i += 1

num = int(input("Enter a number to find its factorial: "))
factorial = 1
temp = num
while temp > 0:
    factorial *= temp
    temp -= 1
print(f"Factorial of {num} is: {factorial}")


num = int(input("Enter a number to check if it's a palindrome: "))
original_num = num
reversed_num = 0
temp = num
while temp > 0:
    digit = temp % 10
    reversed_num = reversed_num * 10 + digit
    temp //= 10
if original_num == reversed_num:
    print(f"{original_num} is a palindrome.")
else:
    print(f"{original_num} is not a palindrome.")

N = int(input("Enter a number N to print even numbers up to N: "))
print(f"Even numbers up to {N}:")

i = 2
while i <= N:
    print(i)
    i += 2
while True:
    num = int(input("Enter a number (0 to stop): "))
    if num == 0:
        print("Exiting the loop.")
        break
    else:
        print(f"You entered: {num}")



